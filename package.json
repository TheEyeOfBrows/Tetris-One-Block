{
  "name": "tetris-one-block",
  "private": true,
  "version": "0.0.0",
  "description": "Tetris but with Only One Block",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run clean && npm run copy && concurrently \"npm run build -- --watch\" \"npm run serve\"",
    "build": "tsc -p \"src/tsconfig.json\"",
    "serve": "lite-server -c \"lite-server/bs-config.json\"",
    "clean": "rimraf build",
    "copy": "cpx \"node_modules/excalibur/dist/excalibur*.js*\" \"build/lib/excalibur\"",
    "pretty": "prettier --write src/**",
    "precommit": "pretty-quick --staged"
  },
  "devDependencies": {
    "excalibur": "~0.18.0",
    "chokidar": "~2.0.4",
    "concurrently": "~4.0.1",
    "cpx": "~1.5.0",
    "husky": "~0.14.3",
    "prettier": "~1.14.2",
    "pretty-quick": "~1.6.0",
    "rimraf": "~2.6.2",
    "rollup": "~0.65.2",
    "rollup-plugin-node-resolve": "~3.4.0",
    "lite-server": "~2.4.0",
    "typescript": "~3.0.3",
    "@types/node": "~10.9.4"
  },
  "author": "",
  "license": "ISC"
}
